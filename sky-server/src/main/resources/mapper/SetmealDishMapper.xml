<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.SetmealDishMapper">

    <!-- getByDishid --> 

    <select id="getByDishid" resultType="java.lang.Long">
        select setmeal_id
        from setmeal_dish
        where dish_id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </select>

    <!-- update --> 

    <update id="update">
        update setmeal
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="categoryId != null">
                category_id = #{categoryId},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="description != null">
                description = #{description},
            </if>
            <if test="image != null">
                image = #{image},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="updateUser != null">
                update_user = #{updateUser}
            </if>
        </set>
        where id = #{id}
    </update>

    <!-- insertDishs --> 

    <insert id="insertDishs">
        insert into setmeal_dish(setmeal_id,dish_id,name,price,copies)
        values
        <foreach collection="setmealDishs" item="setmealDish" separator=",">
            (#{setmealDish.setmealId},#{setmealDish.dishId},#{setmealDish.name},#{setmealDish.price},#{setmealDish.copies})
        </foreach>
    </insert>

    <!-- deleteBySetmealIds --> 

    <delete id="deleteBySetmealIds">
        DELETE FROM setmeal_dish where setmeal_id in 
        <foreach collection="ids" index="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <!-- getBySetmealId --> 

    <select id="getBySetmealId" resultType="com.sky.entity.SetmealDish">
        SELECT * FROM setmeal_dish WHERE setmeal_id = #{id}
    </select>
</mapper>
